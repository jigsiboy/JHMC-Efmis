                app:smsp_enableErrorLabel="false"
                app:smsp_hintSize="18sp"
                app:smsp_itemSize="18sp"
                app:smsp_floatingLabelSize="14sp"
                app:smsp_hint="Please select user"
                app:smsp_hintColor="#000000"
                app:smsp_itemColor="#000000"
                app:smsp_itemListColor="#7C4DFF"
                app:smsp_itemListHintBackgroundColor="#298fca"
                app:smsp_itemListHintColor="#000000"
                android:background="#D3D3D3"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="#FF5252"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="4"/>

