        <item name="settingsIcon">@drawable/ic_settings_white_24dp</item>
        <item name="exitIcon">@drawable/ic_exit_to_app_white_24dp</item>

        <item name="standardPadding">16dp</item>
        <item name="standardLargePadding">32dp</item>
        <item name="relevantTextColor">#000000</item>
        <item name="breadcrumbButton">@drawable/breadcrumb_button</item>
        <item name="breadcrumbSeparator">@drawable/ic_breadcrumb_separator</item>
        <item name="entityTableCellPressed">@drawable/abc_ab_solid_dark_holo</item>
        <item name="titleIndicatorColor">@color/light_title_indicator_text_color</item>
        <item name="nextIcon">@drawable/ic_action_playback_forw</item>
        <item name="smartNextIcon">@drawable/ic_action_playback_next</item>
        <item name="prevIcon">@drawable/ic_action_playback_rev</item>
        <item name="importIcon">@drawable/ic_action_download</item>
        <item name="goToTodayIcon">@drawable/ic_action_go_to_today</item>
        <item name="timeIcon">@drawable/ic_action_time</item>
        <item name="tableIcon">@drawable/ic_action_table</item>
        <item name="cameraIcon">@drawable/ic_action_camera</item>
        <item name="openIcon">@drawable/ic_action_collection</item>
        <item name="closeIcon">@drawable/ic_close_white_24dp</item>
        <item name="removeIcon">@drawable/ic_action_remove</item>
        <item name="navigateToLocationIcon">@drawable/ic_navigation_white_24dp</item>
        <item name="mapIcon">@drawable/ic_map_white_24dp</item>
        <item name="helpIcon">@drawable/ic_help_white_24dp</item>
        <item name="aboutIcon">@drawable/ic_about_white_24dp</item>
        <item name="viewAsListIcon">@drawable/ic_action_view_as_list</item>
        <item name="deleteIcon">@drawable/ic_delete_forever_white_24dp</item>
        <item name="nodePathDetailsBackground">@color/dark_node_path_details_background_color</item>
        <item name="entityListHeaderBorderColor">@color/dark_entity_list_header_border_color</item>
        <item name="nodeListSelectedBackgroundColor">@color/dark_node_list_selected_background_color</item>
        <item name="spinnerItemTextColor">#FFFFFF</item>
        <item name="spinnerItemBackground">#10FFFFFF</item>
        <item name="iconButtonBorderColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#004403</item>
        <item name="android:itemTextAppearance">@style/actionMenuItem</item>
        <item name="android:listPreferredItemHeightSmall">72dp</item>
        <item name="moreIcon">@drawable/ic_more_vert_white_24dp</item>
        <item name="backupIcon">@drawable/ic_settings_backup_restore_black_24dp</item>
        <item name="exportIcon">@drawable/ic_file_download_black_24dp</item>
        <item name="submitToCollectIcon">@drawable/ic_cloud_upload_black_24dp</item>
        <item name="surveyListIcon">@drawable/ic_list_black_24dp</item>
        <item name="settingsIcon">@drawable/ic_settings_black_24dp</item>
        <item name="exitIcon">@drawable/ic_exit_to_app_black_24dp</item>

        <item name="relevantTextColor">@android:color/black</item>
        <item name="irrelevantTextColor">@color/light_disabled_color</item>
        <item name="breadcrumbButton">@drawable/breadcrumb_button_light</item>
        <item name="breadcrumbSeparator">@drawable/ic_breakcrumb_separator_light</item>
        <item name="entityTableCellPressed">@drawable/abc_ab_solid_light_holo</item>
        <item name="titleIndicatorColor">@color/light_title_indicator_text_color</item>
        <item name="nextIcon">@drawable/ic_action_playback_forw</item>
        <item name="smartNextIcon">@drawable/ic_action_playback_next</item>
        <item name="prevIcon">@drawable/ic_action_playback_rev</item>
        <item name="importIcon">@drawable/ic_action_download_light</item>
        <item name="goToTodayIcon">@drawable/ic_action_go_to_today_light</item>
        <item name="timeIcon">@drawable/ic_action_time_light</item>
        <item name="tableIcon">@drawable/ic_action_table</item>
        <item name="cameraIcon">@drawable/ic_action_camera_light</item>
        <item name="openIcon">@drawable/ic_action_collection_light</item>
        <item name="closeIcon">@drawable/ic_close_black_24dp</item>
        <item name="removeIcon">@drawable/ic_action_remove_light</item>
        <item name="nodePathDetailsBackground">@color/light_node_path_details_background_color</item>
        <item name="viewAsListIcon">@drawable/ic_action_view_as_list</item>
        <item name="deleteIcon">@drawable/ic_delete_forever_white_24dp</item>
        <item name="navigateToLocationIcon">@drawable/ic_navigation_black_24dp</item>
        <item name="mapIcon">@drawable/ic_map_black_24dp</item>
        <item name="helpIcon">@drawable/ic_help_black_24dp</item>
        <item name="aboutIcon">@drawable/ic_about_black_24dp</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:dropDownItemStyle">@style/Widget.DropDownItemLight</item>
        <item name="entityListHeaderBorderColor">#000000</item>
        <item name="nodeListSelectedBackgroundColor">#000000</item>
        <item name="spinnerItemTextColor">#444444</item>
        <item name="spinnerItemBackground">#FFFFFF</item>
        <item name="iconButtonBorderColor">#ffffff</item>
    </style>

    <style name="actionMenuItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="BreadCrumbs">
        <item name="background">@drawable/abc_ic_ab_back_holo_dark</item>
    </style>

    <style name="BreadcrumbSelectedNode">
        <item name="android:textSize">@dimen/abc_action_bar_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="button" parent="android:Widget.Button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_background_color</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
