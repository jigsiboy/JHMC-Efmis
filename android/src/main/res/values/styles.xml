<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">#004403</item>
        <item name="android:itemTextAppearance">@style/actionMenuItem</item>
        <item name="android:listPreferredItemHeightSmall">72dp</item>
        <item name="moreIcon">@drawable/ic_more_vert_white_24dp</item>
        <item name="backupIcon">@drawable/ic_settings_backup_restore_white_24dp</item>
        <item name="exportIcon">@drawable/ic_file_download_white_24dp</item>
        <item name="submitToCollectIcon">@drawable/ic_cloud_upload_white_24dp</item>
